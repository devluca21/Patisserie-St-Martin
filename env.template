# Security Configuration for Patisserie St. Martin
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control

# Brevo API Configuration
BREVO_API_KEY=your_brevo_api_key_here
BREVO_LIST_ID=12
BREVO_NEWSLETTER_LIST_ID=12
BREVO_NOTIFY_EMAIL=pstm2495@gmail.com

# Security Monitoring (Optional)
SECURITY_API_TOKEN=your_security_monitoring_token_here
SECURITY_WEBHOOK_URL=https://your-security-webhook.com/endpoint

# Rate Limiting Configuration (Optional - defaults are secure)
RATE_LIMIT_CONTACT_MAX=10
RATE_LIMIT_CONTACT_WINDOW=60000
RATE_LIMIT_NEWSLETTER_MAX=5
RATE_LIMIT_NEWSLETTER_WINDOW=60000
RATE_LIMIT_GENERAL_MAX=100
RATE_LIMIT_GENERAL_WINDOW=60000

# Security Headers (Optional - defaults are secure)
SECURITY_HEADERS_ENABLED=true
CSP_STRICT_MODE=true
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=true

# Logging Configuration (Optional)
SECURITY_LOGGING_ENABLED=true
SECURITY_LOG_LEVEL=medium
SECURITY_LOG_RETENTION_DAYS=30

# Threat Detection (Optional - defaults are comprehensive)
THREAT_DETECTION_ENABLED=true
XSS_DETECTION_ENABLED=true
SQL_INJECTION_DETECTION_ENABLED=true
COMMAND_INJECTION_DETECTION_ENABLED=true
PATH_TRAVERSAL_DETECTION_ENABLED=true

# Bot Protection (Optional)
BOT_PROTECTION_ENABLED=true
SUSPICIOUS_UA_BLOCKING_ENABLED=true
SUSPICIOUS_REFERER_BLOCKING_ENABLED=true

# Development vs Production
NODE_ENV=development
# NODE_ENV=production
